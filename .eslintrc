{
	"env": {
	  "mocha": true, // for test files
	  "truffle/globals": true, // same as "truffle/truffle": true
	  "es6": true,
		"browser": true,
		"node": true
	},
	"parserOptions": {
		"ecmaVersion": 2017
    },
	"extends": [
		"eslint:recommended",
		"plugin:prettier/recommended"
	],
	"rules": {
		"comma-dangle": "off"
	},
	"plugins": [
	  "truffle"
	],
	"exclude": ["**/*.sol"]
  }